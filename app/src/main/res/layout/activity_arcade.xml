<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".arcade">

    <TextView
        android:id="@+id/arcade"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="-오락실-"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="99dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text="나가기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dg_image"
        android:layout_width="144dp"
        android:layout_height="145dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="476dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ndgnotforgive" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="다음"
        app:layout_constraintStart_toEndOf="@+id/dg_image"
        app:layout_constraintTop_toBottomOf="@+id/script" />

    <TextView
        android:id="@+id/script"
        android:layout_width="239dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="여기는 오락실이다."
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/dg_image"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/statue"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arcade"
        app:srcCompat="@drawable/pinkbeanstatue1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/text_password"
        app:layout_constraintTop_toTopOf="@+id/statue" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="236dp"
        android:text="비번"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/statue3"
        app:layout_constraintTop_toBottomOf="@+id/arcade" />

    <Button
        android:id="@+id/answer"
        android:layout_width="25dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="236dp"
        android:background="#00ff0000"
        android:text="입력"
        android:textSize="8sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/arcade" />

    <ImageView
        android:id="@+id/cup"
        android:layout_width="57dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dg_image"
        app:layout_constraintTop_toBottomOf="@+id/next_button"
        app:srcCompat="@drawable/pinkbeancup" />

    <ImageView
        android:id="@+id/statue2"
        android:layout_width="170dp"
        android:layout_height="169dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/statue"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pinkbeanstatue2" />

    <ImageView
        android:id="@+id/statue3"
        android:layout_width="153dp"
        android:layout_height="151dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statue"
        app:srcCompat="@drawable/pinkbeanstatue3" />

    <ImageView
        android:id="@+id/statue4"
        android:layout_width="149dp"
        android:layout_height="149dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/statue3"
        app:layout_constraintTop_toBottomOf="@+id/statue2"
        app:srcCompat="@drawable/pinkbeancup" />

</androidx.constraintlayout.widget.ConstraintLayout>