<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".recordingroom">

    <TextView
        android:id="@+id/recordingRoom"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="-녹음실-"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="99dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text="나가기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dg_veryexciting"
        android:layout_width="151dp"
        android:layout_height="144dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/exit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/script"
        app:layout_constraintVertical_bias="0.115"
        app:srcCompat="@drawable/dg_veryexciting" />

    <ImageView
        android:id="@+id/angelic_buster"
        android:layout_width="358dp"
        android:layout_height="224dp"
        android:layout_marginTop="76dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordingRoom"
        app:srcCompat="@drawable/angelicbuster" />

    <TextView
        android:id="@+id/script"
        android:layout_width="247dp"
        android:layout_height="81dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:text="여기는 녹음실이구나!"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angelic_buster" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="91dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="다음"
        app:layout_constraintStart_toEndOf="@+id/dg_veryexciting"
        app:layout_constraintTop_toBottomOf="@+id/script" />

    <TextView
        android:id="@+id/memo"
        android:layout_width="353dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="이 포스터는 내 보물이니까 저~~~얼대 만지면 안돼!!"
        android:textSize="16dp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angelic_buster" />

    <Button
        android:id="@+id/hidden"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="96dp"
        android:background="#00ff0000"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/angelic_buster"
        app:layout_constraintTop_toTopOf="@+id/angelic_buster" />

    <Button
        android:id="@+id/rain_drop_flower"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#CFEAFF"
        android:text="Rain Drop Flower♪"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dg_veryexciting"
        app:layout_constraintTop_toBottomOf="@+id/next_button" />

    <Button
        android:id="@+id/the_eyes_of_the_ishfira"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#CFEAFF"
        android:text="The eyes of the ishfira♪"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dg_veryexciting"
        app:layout_constraintTop_toBottomOf="@+id/rain_drop_flower" />

    <Button
        android:id="@+id/the_tune_of_azure_light"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#CFEAFF"
        android:text="The tune of azure light♪"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dg_veryexciting"
        app:layout_constraintTop_toBottomOf="@+id/the_eyes_of_the_ishfira" />

    <Button
        android:id="@+id/whrever_you_are"
        android:layout_width="194dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#CFEAFF"
        android:text="Wherever you are♪"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/dg_veryexciting"
        app:layout_constraintTop_toBottomOf="@+id/the_tune_of_azure_light" />

</androidx.constraintlayout.widget.ConstraintLayout>